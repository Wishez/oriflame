| {% load static %}
doctype
html.no-js(lang="ru", manifest="{% static 'business/app.manifest' %}")
  head
    meta(charset="UTF-8")
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1.0"
    )
    meta(
      http-equive="X-UA-Compatible",
      content="IE=edge"
    )
    link(
        rel="shortcut icon", 
        type="image/x-icon", 
        href="{% static 'business/img/favicon.ico' %}"
    )
    | {% block description %}{% endblock %}
    | {% block title %}{% endblock %}
    link(
      rel="stylesheet",
      href="{% static 'business/css/main.css' %}",
      media='none',
      onload='if (media == "none") media = "all"'
    ) 
    | {% block styles %}{% endblock %}
    | {% block conf_js %}{% endblock %}
  body
    #root
      .curtain
        .sk-double-bounce
          .sk-child.sk-double-bounce1
          .sk-child.sk-double-bounce2

    script(async, src="{% static '/business/js/main.js' %}")
    link(rel="stylesheet",
         href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.css",
         media='none',
         onload='if (media == "none") media = "all"'
    )
    link(
      rel="stylesheet",
      href="{% static 'business/css/ie-10-up.css' %}",
      media='none',
      onload='if (media == "none") media = "all"'
    ) 
    | {% if custom.widgets %}
    | {{ custom.widgets|safe }}
    | {% endif %}
